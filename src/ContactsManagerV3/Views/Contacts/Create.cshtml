@model CreateContactViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form asp-action="Create" enctype="multipart/form-data" ng-submit="vm.addContact()">
    <div class="form-horizontal">
        <h4>Contact</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-muted"></div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName" class=" control-label"></label>
                <div class="">
                    <input asp-for="FirstName" class="form-control" ng-model="vm.newContact.firstName"/>
                    <span asp-validation-for="FirstName" class="text-muted" />
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName    " class="control-label"></label>
                <div class="">
                    <input asp-for="LastName" class="form-control" ng-model="vm.newContact.lastName"/>
                    <span asp-validation-for="LastName" class="text-muted" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="EmailAddress" class="control-label"></label>
                <div class="">
                    <input asp-for="EmailAddress" class="form-control" ng-model="vm.newContact.emailAddress"/>
                    <span asp-validation-for="EmailAddress" class="text-muted" />
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <div class="">
                    <input asp-for="PhoneNumber" class="form-control" ng-model="vm.newContact.phoneNumber"/>
                    <span asp-validation-for="PhoneNumber" class="text-muted" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="BirthDate" class=" control-label"></label>
                <div class="">
                    <input asp-for="BirthDate" class="form-control" ng-model="vm.newContact.birthDate"/>
                    <span asp-validation-for="BirthDate" class="text-muted" />
                </div>
            </div>
            <div class="form-group col-md-2">
                <label class="control-label">Groups</label>
                <select asp-for="SelectedGroups" style="display:block">
                    <option value="Associate">Associate</option>
                    <option value="Colleague">Colleague</option>
                    <option value="Family">Family</option>
                    <option value="Friend">Friend</option>
                </select>
            </div>
            
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Comments" class="control-label"></label>
                <div class="">
                    <textarea asp-for="Comments" class="form-control"></textarea>
                    <span asp-validation-for="Comments" class="text-muted" />
                </div>
            </div>
            <div class="form-group col-md-2">
                <label class="control-label">Profile Image</label>
                <input type="file" name="file" />
            </div>
            
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-8 col-xs-offset-5">
                    <a asp-action="Index" class="btn btn-default">Cancel</a>
                    
                    <input type="submit" value="Add Contact" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
